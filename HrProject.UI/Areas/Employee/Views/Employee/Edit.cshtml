@model EmployeeUpdateModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bilgilerinizi Güncelleyin</h4>
            <p class="card-description">
            </p>
            <form class="forms-sample" enctype="multipart/form-data" asp-action="Edit" asp-area="Employee" method="post">
                <input type="hidden" asp-for="@Model.ID" />
                <div class="form-group">
                    <div class="custom-file">
                        <input asp-for="@Model.ImageFile" type="file" class="custom-file-input fileUpload" />
                        <label  class="custom-file-label fileLabel">Fotoğraf Seçiniz</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber" for="exampleInputCity1">Telefon</label>
                    <input asp-for="@Model.PhoneNumber" type="text" class="form-control" id="exampleInputCity1" placeholder="Telefon numaranız">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address" for="exampleTextarea1">Adres</label>
                    <textarea asp-for="@Model.Address" class="form-control" id="exampleTextarea1" rows="4" placeholder="Adresiniz"></textarea>
                </div>
                <button type="submit" value="Submit" class="btn btn-primary mr-2">Güncelle</button>
                @*<button class="btn btn-light">Cancel</button>*@
            </form>
        </div>
    </div>
</div>





