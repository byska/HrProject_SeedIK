@model List<Expense>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link href="~/css/employeedetailscss/detailscss.css" rel="stylesheet" />

<div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Currency</th>
                            <th>Status</th>
                            <th>Amount</th>
                            <th>Request Date</th>
                            <th>Reply Date</th>
                            <th>Expense Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model)
                        {
                            <tr>
                                <td>@expense.Type</td>
                                <td>@expense.Currency</td>
                                <td>@expense.Status</td>
                                <td>@expense.Amount</td>
                                <td>@expense.RequestDate</td>
                                <td>@expense.ReplyDate</td>
                                <td><img src="@expense.ExpenseImage" alt="Expense Image"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
