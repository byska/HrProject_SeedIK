@model IEnumerable<ManagerListEmployeeDTO>
@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common;

<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personeller</h4>
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Fotoğraf</th>
                            <th>Ad</th>
                            <th>İkinci Ad</th>
                            <th>Soyad</th>
                            <th>İkinci Soyad</th>
                            <th>Doğum Tarihi</th>
                            <th>İşe Başlama Tarihi</th>
                            <th>İşten Çıkış Tarihi</th>
                            <th>İş</th>
                            <th>Departman</th>
                            <th>Firma</th>
                            <th>Email</th>
                            <th>Adres</th>
                            <th>Telefon Numarası</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <div class="col-xs-2">
                                    <img src="@item.EmployeeImage"
                                         alt="Generic placeholder image" class="img-fluid"
                                         style="width: 180px; border-radius: 10px;">
                                </div>
                                <td>@item.FirstName</td>
                                <td>@item.SecondFirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.SecondLastName</td>
                                <td>@item.BirthDate</td>
                                <td>@item.StartDate</td>
                                <td>@item.DismissalDate</td>
                                <td>@item.Job.JobName</td>
                                <td>@item.Department.DepartmentName</td>
                                <td>@item.Company.CompanyName</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>@item.PhoneNumber</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("EmployeeList",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
            new PagedListRenderOptions()
            {
            ContainerDivClasses = new List<string> {"d-flex justify-content-start mb-4"},
            UlElementClasses = new List<string> {"pagination"},
            LiElementClasses = new List<string> {"btn btn-primary mx-1 text-uppercase"},
            ActiveLiElementClass =  "active",
            })
<script>
    $(document).ready(function () {
        $('ul.pagination > li.disabled > a').addClass('page-link');
    });
</script>