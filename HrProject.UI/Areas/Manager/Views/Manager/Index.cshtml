@model ManagerModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var names = TempData["myObject"] as Job_Department_Company_NameModel;
}
@{
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col ">
                <div class="card bg-light" style="border-radius: 15px;">
                    <div class="card-body p-3 ">
                        <div class="d-flex text-black ">
                            <div class="flex-shrink-0  mr-3">
                                <img src="@Model.EmployeeImage"
                                     alt="Generic placeholder image" class="img-fluid"
                                     style="width: 180px; border-radius: 10px;">
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="justify-content-center mb-1 align-items-center">@Model.FirstName @Model.LastName</h5>
                                <p class="justify-content-center mb-1 align-items-center">@Model.Email</p>
                                <p class="justify-content-center mb-1 align-items-center"><b>Departman :</b> <span>@names.departmentName</span></p>
                                <p class="justify-content-center mb-1 align-items-center"><b>İş : </b><span>@names.jobName</span></p>
                                <p class="justify-content-center mb-1 align-items-center"><b>Kurum : </b><span>@names.companyName</span></p>
                                <div class="rounded-3 p-2 mb-2"
                                     style="background-color: #efefef;">
                                    <div>
                                        <p class="small text-muted mb-1">Address </p>
                                        <p>@Model.Address</p>
                                    </div>
                                    <div>
                                        <p class="small text-muted mb-1">Phone </p>
                                        <p>@Model.PhoneNumber</p>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="d-flex pt-1">
                            <a type="button" asp-area="" asp-controller="" asp-action="" class="btn btn-outline-primary mr-1 flex-grow-1">Düzenle</a>
                            <a type="button" asp-area="" asp-controller="" asp-action="" class="btn btn-primary flex-grow-1">Detay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

